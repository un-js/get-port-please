{
  "name": "get-port-please",
  "version": "3.0.1",
  "description": "Get an available TCP port to listen",
  "repository": "unjs/get-port-please",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "vitest",
    "lint": "eslint --ext ts . && prettier -c src test",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm build && standard-version && pnpm publish && git push --follow-tags",
    "test": "pnpm lint && vitest run"
  },
  "devDependencies": {
    "@types/node": "^18.16.16",
    "@vitest/coverage-c8": "^0.31.1",
    "eslint": "^8.41.0",
    "eslint-config-unjs": "^0.2.0",
    "jiti": "^1.18.2",
    "prettier": "^3.0.2",
    "standard-version": "^9.5.0",
    "typescript": "latest",
    "unbuild": "^1.2.1",
    "vitest": "^0.31.1"
  },
  "packageManager": "pnpm@8.7.0"
}
